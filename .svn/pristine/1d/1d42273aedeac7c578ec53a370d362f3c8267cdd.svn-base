<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--ListView操作列的样式-->

    <DataTemplate x:Key="listViewColumnButton">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <!--<ColumnDefinition Width="100"/>-->
            </Grid.ColumnDefinitions>
            <!--<Button x:Name="tbUpdate" Content="接收请求" 
                    Command="{Binding DataContext.AcceptedMessage,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Mode=OneWay}"  
                     Background="{StaticResource WindowTitle}"  HorizontalAlignment="Left">
            </Button>-->
            <Button x:Name="tbDelete" Content="接收请求" Grid.Column="1"  
                    Command="{Binding DataContext.AcceptedRequest,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Mode=OneWay}"  
                    Background="{StaticResource WindowTitle}" HorizontalAlignment="Right">
            </Button>
        </Grid>
        <DataTemplate.Triggers>
          
            <Trigger Property="IsMouseOver" Value="True" SourceName="tbDelete">
                <Setter TargetName="tbDelete" Property="Foreground" Value="Red" />
                <!--<Setter TargetName="tbUpdate" Property="Foreground" Value="Blue" />-->
            </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>
    <Style TargetType="{x:Type ListViewItem}" x:Key="lvfortsjt">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <!--<Setter Property="Foreground" Value="Transparent" />-->
                <Setter Property="IsSelected" Value="True"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>