    <Style x:Key="RadioButtonlistVericalCC" TargetType="{x:Type RadioButton}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FF85C3FF" Offset="1" />
                    <GradientStop Color="#FF85C3FF" Offset="0.754" />
                    <GradientStop Color="#FF85C3FF" Offset="0.254" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="IsChecked" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid>
                        <Border x:Name="border" BorderThickness="0" BorderBrush="#5A95CF" CornerRadius="0">
                            <Rectangle x:Name="rectangle" Stroke="#5A95CF" StrokeThickness="1" Margin="2" Fill="{TemplateBinding Background}" RadiusX="2" RadiusY="2"/>
                        </Border>
                        <TextBlock x:Name="txtblock" Text="{TemplateBinding ContentControl.Content}" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B7EBC907">
                                
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#B7EBC907">
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>


